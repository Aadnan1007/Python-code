import pyttsx3
import os

pyttsx3.speak("Welcome user this is bot  ....")


while True:
       pyttsx3.speak("How may I help you")
       print("How may I help you :" , end=' ' )
       p = input()
       

       if  (("run" in p) or  ("open" in p) or ("launch" in p))  and  (("chrome " in p) or  ("browser" in p)) :
         pyttsx3.speak("Opening chrome for you please wait")
         os.system("start chrome")
         
       elif  (("run" in p) or ("open" in p) or  ("launch" in p))  and  (("notepad" in p) or  ("editor" in p)):
         pyttsx3.speak("Opening notepad for you please wait")
         os.system("notepad")

       elif  (("run" in p) or  ("open" in p) or ("launch" in p))  and  (("video player " in p) or  ("video" in p)) :
         pyttsx3.speak("Opening videoplayer for you please wait")
         os.system("wmplayer")

       elif  (("run" in p) or  ("open" in p) or ("launch" in p))  and  ("codeblocks " in p):
         pyttsx3.speak("Opening codeblocks for you please wait")
         os.system("codeblocks.exe")

       elif  (("run" in p) or  ("open" in p) or ("launch" in p))  and  ("Powerpoint " in p) :
         pyttsx3.speak("Opening Powerpoint  for you please wait")
         os.system("PowerPoint")

       elif  (("run" in p) or  ("open" in p) or ("launch" in p))  and  ("linkedin" in p) :
         pyttsx3.speak("Opening your linked account please wait")
         os.system("start chrome linked.in")
        
       elif  (("run" in p) or  ("open" in p) or ("launch" in p))  and  ("ms excel" in p) :
         pyttsx3.speak("Opening ms excel for you please wait")
         os.system("excel.exe")
     
       elif  (("run" in p) or  ("open" in p) or ("launch" in p) or ("play" in p)) and  ("bol hu" in p) or ("bol" in p) :
         pyttsx3.speak("Opening Video song for you please wait")
         os.system("start chrome https://youtu.be/KmErtNSs5ak")

       elif  (("run" in p) or  ("open" in p) or ("launch" in p))  and  ("ec2" in p) :
         pyttsx3.speak("Launching Ec2 Instance for you")
         os.system("aws ec2 run-instances --image-id ami-0ebc1ac48dfd14136 --count 1 --instance-type t2.micro --key-name myiiec --security-groups allowall")

       elif (("hii" in p) or ("hello" in p) or ("hey" in p)or ("hi" in p)):
         pyttsx3.speak("hii user now tell me how can I help you")

       elif ("exit" in p) or ("stop" in p) or ("quit" in p):
         pyttsx3.speak("Thank you for using bot")
         break
       else:
         pyttsx3.speak("This application is not supported in your computer please enter again")    
